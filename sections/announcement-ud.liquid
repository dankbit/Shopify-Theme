{% comment %}
Announcement Bar Section
Displays swipable announcement messages on the left with social icons on the right
{% endcomment %}

<div class="announcement-bar-container">
  <!-- Announcement Messages (Left Side) -->
  <div class="announcements-wrapper">
    <div class="announcements-slider">
      {% for block in section.blocks %}
        {% if block.type == "announcement" %}
          <div class="announcement-slide">
            <p>{{ block.settings.message }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <!-- Navigation Dots -->
    <div class="dots-container">
      {% for block in section.blocks %}
        {% if block.type == "announcement" %}
          <span class="dot {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}"></span>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <!-- Social Icons (Right Side) -->
  <div class="social-icons">
    {% for block in section.blocks %}
      {% if block.type == "social_icon" %}
        <a 
          href="{{ block.settings.link }}" 
          class="social-link"
          title="{{ block.settings.label }}"
          target="_blank"
