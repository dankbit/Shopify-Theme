</div>

<style>
  .announcement-bar-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: 12px 20px;
  }

  /* Announcements Section */
  .announcements-wrapper {
    flex: 1;
    position: relative;
    min-height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .announcements-slider {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .announcement-slide {
    position: absolute;
    width: 100%;
    text-align: center;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    pointer-events: none;
  }

  .announcement-slide.active {
    opacity: 1;
    position: relative;
    pointer-events: auto;
  }

  .announcement-slide p {
    margin: 0;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.3px;
  }

  /* Dots Navigation */
  .dots-container {
    position: absolute;
    bottom: -25px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 6px;
  }

  .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.4);
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .dot.active {
    background-color: rgba(255, 255, 255, 1);
  }

  /* Social Icons */
  .social-icons {
    display: flex;
    gap: 15px;
    align-items: center;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    color: {{ section.settings.text_color }};
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .social-link:hover {
    opacity: 0.7;
  }

  .social-icon {
    width: 100%;
    height: 100%;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .announcement-bar-container {
      flex-direction: column;
      gap: 15px;
      padding: 15px 20px;
    }

    .announcements-wrapper {
      width: 100%;
    }

    .dots-container {
      position: static;
      transform: none;
      bottom: auto;
      justify-content: center;
      margin-top: 10px;
    }

    .social-icons {
      width: 100%;
      justify-content: center;
    }

    .announcement-slide p {
      font-size: 12px;
    }
  }
</style>

<script>
(function() {
  const slides = document.querySelectorAll('.announcement-slide');
  const dots = document.querySelectorAll('.dot');
  let currentIndex = 0;
  let autoplayTimer;

  const showSlide = (index) => {
    // Remove active class from all slides and dots
    slides.forEach(slide => slide.classList.remove('active'));
    dots.forEach(dot => dot.classList.remove('active'));

    // Add active class to current slide and dot
    if (slides[index]) {
      slides[index].classList.add('active');
    }
    if (dots[index]) {
      dots[index].classList.add('active');
    }

    currentIndex = index;
  };

  const nextSlide = () => {
    let next = (currentIndex + 1) % slides.length;
    showSlide(next);
  };

  const goToSlide = (index) => {
    clearTimeout(autoplayTimer);
    showSlide(index);
    startAutoplay();
  };

  const startAutoplay = () => {
    autoplayTimer = setTimeout(nextSlide, 5000); // Change slide every 5 seconds
  };

  // Initialize
  if (slides.length > 0) {
    showSlide(0);
    startAutoplay();

    // Dot click handlers
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => goToSlide(index));
    });
  }
})();
</script>

