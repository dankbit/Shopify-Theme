<section class="best-sellers" id="best-sellers-ud-{{ section.id }}">
   <div class="main-container" style="max-width: {{ section.settings.section_width }}px;">
        <div class="title-wrapper" style="text-align: {{ section.settings.title_alignment }};">
            <h3 class="section-title">{{ section.settings.title }}</h3>
        </div>

        <!-- Products will be displayed here -->
        <div class="products-wrapper">
        <!-- Carousel or grid of products -->
         {% if section.settings.collection != blank %}
      <div class="products-grid">
        
        {% comment %} 
        Loop through products in selected collection
        limit: controls how many products to show
        {% endcomment %}
        {% for product in section.settings.collection.products limit: section.settings.products_limit %}
          <div class="product-card">
            
            {% comment %} Product Image {% endcomment %}
            {% if product.featured_image %}
              <div class="product-image">
                <img 
                  src="{{ product.featured_image | image_url: width: 500 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  width="500"
                  height="500"
                  loading="lazy"
                >
              </div>
            {% endif %}

            {% comment %} Product Info {% endcomment %}
            <div class="product-info">
              
              {% comment %} Product Title {% endcomment %}
              <h3 class="product-title">{{ product.title }}</h3>

              {% comment %} Product Price {% endcomment %}
              <div class="product-price">
                {% if product.price_varies %}
                  From {{ product.price_min | money }}
                {% else %}
                  {{ product.price | money }}
                {% endif %}
              </div>

              {% comment %} Add to Cart Button {% endcomment %}
              <a href="{{ product.url }}" class="btn-primary">View Product</a>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      {% comment %} Show message if no collection selected {% endcomment %}
      <div class="no-collection-message">
        <p>Please select a collection to display products</p>
      </div>
    {% endif %}
        </div>
   </div> 

</section>

<style>
  .best-sellers {
    padding: 40px 20px;
  }

  .main-container {
    margin: 0 auto;
  }

  .title-wrapper {
    margin-bottom: 30px;
  }

  .section-title {
    margin: 0;
    font-weight: 600;
  }

  /* Desktop Styles */
  @media (min-width: 1024px) {
    .section-title {
      font-size: {{ section.settings.title_font_size_desktop }}px;
      color: {{ section.settings.title_color_desktop }};
    }
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .section-title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      color: {{ section.settings.title_color_mobile }};
    }
  }

  .products-wrapper {
    display: grid;
    gap: 20px;
  }

  @media (min-width: 1024px) {
    .products-wrapper {
      grid-template-columns: repeat({{ section.settings.products_per_row_desktop }}, 1fr);
    }
  }

  @media (max-width: 768px) {
    .products-wrapper {
      grid-template-columns: repeat({{ section.settings.products_per_row_mobile }}, 1fr);
    }
  }
</style>

{% schema %}
{
  "name": "Best Sellers",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "BEST SELLERS"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Title Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "title_font_size_desktop",
      "label": "Title Font Size - Desktop",
      "min": 16,
      "max": 48,
      "step": 1,
      "default": 28,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "title_font_size_mobile",
      "label": "Title Font Size - Mobile",
      "min": 16,
      "max": 36,
      "step": 1,
      "default": 22,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "title_color_desktop",
      "label": "Title Color - Desktop",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "title_color_mobile",
      "label": "Title Color - Mobile",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "section_width",
      "label": "Section Width",
      "min": 800,
      "max": 1400,
      "step": 10,
      "default": 1200,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "products_per_row_desktop",
      "label": "Products Per Row - Desktop",
      "min": 1,
      "max": 8,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "products_per_row_mobile",
      "label": "Products Per Row - Mobile",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 1
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Total Products to Show",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 8
    }
  ]
}
{% endschema %}