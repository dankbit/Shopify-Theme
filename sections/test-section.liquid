{% comment %}
Best Sellers Section
Displays a carousel of best-selling products with images, titles, and prices
{% endcomment %}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<div class="best-sellers-container">
  <h2 class="section-title">{{ section.settings.title }}</h2>

  <div class="swiper best-sellers-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% if block.type == "product_item" %}
          <div class="swiper-slide product-slide">
            <div class="product-image-wrapper">
              <img 
                class="product-image" 
                src="{{ block.settings.product_image | image_url: width: 300 }}" 
                alt="{{ block.settings.product_name }}"
                width="300"
                height="300"
              >
            </div>
            <div class="product-info">
              <h3 class="product-name">{{ block.settings.product_name }}</h3>
              <div class="product-pricing">
                {% if block.settings.original_price != blank %}
                  <span class="original-price">${{ block.settings.original_price }}</span>
                {% endif %}
                <span class="current-price">${{ block.settings.price }}</span>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Navigation Arrows -->
    <button class="swiper-button-prev best-sellers-prev" aria-label="Previous product"></button>
    <button class="swiper-button-next best-sellers-next" aria-label="Next product"></button>
  </div>
</div>

<style>
  .best-sellers-container {
    padding: 40px 20px;
    background-color: #fff;
  }

  .section-title {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 30px;
    color: #000;
  }

  .best-sellers-swiper {
    position: relative;
    padding: 20px 0;
  }

  .product-slide {
    display: flex;
    flex-direction: column;
    height: auto;
  }

  .product-image-wrapper {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f5f5f5;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-info {
    padding: 0 5px;
  }

  .product-name {
    font-size: 14px;
    font-weight: 500;
    color: #333;
    margin-bottom: 8px;
    line-height: 1.4;
    min-height: 40px;
  }

  .product-pricing {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .original-price {
    font-size: 13px;
    color: #999;
    text-decoration: line-through;
  }

  .current-price {
    font-size: 16px;
    font-weight: 600;
    color: #000;
  }

  /* Navigation Buttons */
  .swiper-button-prev,
  .swiper-button-next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background-color: rgba(0, 0, 0, 0.5);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
    z-index: 10;
  }

  .swiper-button-prev:hover,
  .swiper-button-next:hover {
    background-color: rgba(0, 0, 0, 0.7);
  }

  .swiper-button-prev::after,
  .swiper-button-next::after {
    content: '';
    font-size: 24px;
  }

  .best-sellers-prev {
    left: -60px;
  }

  .best-sellers-next {
    right: -60px;
  }

  @media (max-width: 1024px) {
    .best-sellers-prev {
      left: 10px;
    }

    .best-sellers-next {
      right: 10px;
    }
  }

  @media (max-width: 768px) {
    .best-sellers-container {
      padding: 30px 15px;
    }

    .section-title {
      font-size: 22px;
      margin-bottom: 20px;
    }

    .product-name {
      font-size: 13px;
    }

    .current-price {
      font-size: 15px;
    }

    .swiper-button-prev,
    .swiper-button-next {
      width: 35px;
      height: 35px;
    }
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>

<script>
(function() {
  // Initialize Swiper
  const swiper = new Swiper('.best-sellers-swiper', {
    slidesPerView: 1,
    spaceBetween: 20,
    loop: true,
    navigation: {
      nextEl: '.best-sellers-next',
      prevEl: '.best-sellers-prev'
    },
    breakpoints: {
      480: {
        slidesPerView: 2,
        spaceBetween: 15
      },
      768: {
        slidesPerView: 3,
        spaceBetween: 20
      },
      1024: {
        slidesPerView: 4,
        spaceBetween: 20
      }
    }
  });
})();
</script>

