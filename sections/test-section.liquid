<style>
  .customer-faves {
    background-color: var(--color-background);
    padding: var(--section-padding-top) var(--section-padding-right) var(--section-padding-bottom) var(--section-padding-left);
  }

  .customer-faves__main-container {
    max-width: 100%;
  }

  /* Header / Title Section */
  .customer-faves__header {
    margin-bottom: 2rem;
  }

  .customer-faves__title {
    font-size: {{ section.settings.title_font_size_mobile }}px;
    color: {{ section.settings.title_color }};
    margin: 0;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  @media (min-width: 768px) {
    .customer-faves__title {
      font-size: {{ section.settings.title_font_size_desktop }}px;
    }
  }

  /* Carousel Wrapper */
  .customer-faves__wrapper {
    display: flex;
    align-items: center;
    gap: 1rem;
    position: relative;
  }

  /* Carousel */
  .customer-faves__carousel {
    flex: 1;
    width: 100%;
  }

  .swiper-wrapper {
    display: flex;
    gap: {{ section.settings.gap_between_products_mobile }}px;
  }

  @media (min-width: 768px) {
    .swiper-wrapper {
      gap: {{ section.settings.gap_between_products_desktop }}px;
    }
  }

  .swiper-slide {
    width: calc((100% / {{ section.settings.products_per_row_mobile }}) - ({{ section.settings.gap_between_products_mobile }}px / {{ section.settings.products_per_row_mobile }}));
    flex-shrink: 0;
  }

  @media (min-width: 768px) {
    .swiper-slide {
      width: calc((100% / {{ section.settings.products_per_row_tablet }}) - ({{ section.settings.gap_between_products_desktop }}px / {{ section.settings.products_per_row_tablet }}));
    }
  }

  @media (min-width: 1024px) {
    .swiper-slide {
      width: calc((100% / {{ section.settings.products_per_row_desktop }}) - ({{ section.settings.gap_between_products_desktop }}px / {{ section.settings.products_per_row_desktop }}));
    }
  }

  /* Product Card */
  .customer-faves__product {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .customer-faves__image-wrapper {
    width: 100%;
    padding-bottom: 100%;
    position: relative;
    background-color: #f5f5f5;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 0.75rem;
  }

  .customer-faves__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .placeholder-svg {
    width: 100%;
    height: 100%;
  }

  .customer-faves__info {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .customer-faves__product-title {
    font-size: {{ section.settings.product_title_font_size_mobile }}px;
    color: {{ section.settings.product_title_color }};
    margin: 0 0 0.5rem 0;
    font-weight: 600;
    line-height: 1.4;
  }

  @media (min-width: 768px) {
    .customer-faves__product-title {
      font-size: {{ section.settings.product_title_font_size_desktop }}px;
    }
  }

  .customer-faves__price {
    font-size: {{ section.settings.price_font_size_mobile }}px;
    color: {{ section.settings.price_color }};
    margin-top: auto;
  }

  @media (min-width: 768px) {
    .customer-faves__price {
      font-size: {{ section.settings.price_font_size_desktop }}px;
    }
  }

  .customer-faves__price--original {
    text-decoration: line-through;
    margin-right: 0.5rem;
    opacity: 0.7;
  }

  .customer-faves__price--current {
    font-weight: 600;
  }

  /* Navigation Arrows */
  .customer-faves__arrow {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    transition: opacity 0.3s ease;
    flex-shrink: 0;
  }

  .customer-faves__arrow:hover {
    opacity: 0.7;
  }

  .customer-faves__arrow--left {
    transform: rotate(180deg);
  }

  .customer-faves__placeholder {
    padding: 2rem;
    text-align: center;
    color: var(--color-foreground);
  }

  /* Swiper Navigation Disable State */
  .swiper-button-disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swiperContainer = document.getElementById('customerFavesSwiper');
    
    if (!swiperContainer) return;

    const swiper = new Swiper('.customer-faves__carousel', {
      slidesPerView: {{ section.settings.products_per_row_mobile }},
      spaceBetween: {{ section.settings.gap_between_products_mobile }},
      loop: false,
      navigation: {
        nextEl: '.customer-faves__arrow--right',
        prevEl: '.customer-faves__arrow--left'
      },
      breakpoints: {
        768: {
          slidesPerView: {{ section.settings.products_per_row_tablet }},
          spaceBetween: {{ section.settings.gap_between_products_desktop }}
        },
        1024: {
          slidesPerView: {{ section.settings.products_per_row_desktop }},
          spaceBetween: {{ section.settings.gap_between_products_desktop }}
        }
      }
    });
  });
</script>