{% comment %}
Image Slider Section
{% endcomment %}

<div class="slider-section" style="
  padding-top: {{ section.settings.padding_top_mobile }}px;
  padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  background-color: {{ section.settings.background_color }};
">
  <div class="main" style="
    width: {{ section.settings.slider_width_mobile }}%;
    height: {{ section.settings.slider_height_mobile }}px;
    margin: auto;
  ">
    {% for block in section.blocks %}
      {% if block.settings.slide_image != blank %}
        <img 
          class="slide" 
          src="{{ block.settings.slide_image | image_url: width: 1200 }}" 
          alt="{{ block.settings.slide_image.alt | escape }}"
          width="1200"
          height="600"
          loading="lazy"
          {{ block.shopify_attributes }}
        >
      {% else %}
        <img 
          class="slide" 
          src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1200 600'%3E%3Crect fill='%23cccccc' width='1200' height='600'/%3E%3Ctext x='50%25' y='50%25' font-size='24' fill='%23666666' text-anchor='middle' dominant-baseline='middle'%3ESlide {{ forloop.index }}%3C/text%3E%3C/svg%3E"
          alt="Slide {{ forloop.index }}"
          width="1200"
          height="600"
          {{ block.shopify_attributes }}
        >
      {% endif %}
    {% endfor %}
    
    {% if section.settings.show_nav_buttons %}
      <div class="nav" style="
        bottom: {{ section.settings.nav_position_bottom }}px;
      ">
        <button class="slider-btn prev-btn" onclick="goPrev{{ section.id }}()" style="
          background-color: {{ section.settings.button_bg_color }};
          color: {{ section.settings.button_text_color }};
          border-radius: {{ section.settings.button_border_radius }}px;
          padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
          font-size: {{ section.settings.button_font_size }}px;
        ">
          {{ section.settings.prev_button_text | default: "Prev" }}
        </button>
        <button class="slider-btn next-btn" onclick="goNext{{ section.id }}()" style="
          background-color: {{ section.settings.button_bg_color }};
          color: {{ section.settings.button_text_color }};
          border-radius: {{ section.settings.button_border_radius }}px;
          padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
          font-size: {{ section.settings.button_font_size }}px;
        ">
          {{ section.settings.next_button_text | default: "Next" }}
        </button>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .slider-section {
    width: 100%;
  }

  .main {
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.slider_border_radius }}px;
  }

  .slide {
    height: 100%;
    width: 100%;
    position: absolute;
    transition: {{ section.settings.transition_speed }}s;
    object-fit: {{ section.settings.image_fit }};
  }

  .nav {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: {{ section.settings.button_gap }}px;
    z-index: 10;
  }

  .slider-btn {
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    cursor: pointer;
    font-weight: {{ section.settings.button_font_weight }};
    text-transform: {{ section.settings.button_text_transform }};
    transition: all 0.3s ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  }

  .slider-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
  }

  .slider-btn:active {
    transform: translateY(0);
  }

  /* Tablet Styles */
  @media (min-width: 768px) {
    .main {
      width: {{ section.settings.slider_width_mobile | times: 1.1 }}% !important;
      height: {{ section.settings.slider_height_mobile | times: 1.2 }}px !important;
    }

    .slider-section {
      padding-top: {{ section.settings.padding_top_mobile | times: 1.2 }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile | times: 1.2 }}px !important;
    }
  }

  /* Desktop Styles */
  @media (min-width: 1024px) {
    .main {
      width: {{ section.settings.slider_width_desktop }}% !important;
      height: {{ section.settings.slider_height_desktop }}px !important;
    }

    .slider-section {
      padding-top: {{ section.settings.padding_top_desktop }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px !important;
    }
  }
</style>

<script>
(function() {
  const slides{{ section.id }} = document.querySelectorAll('#shopify-section-{{ section.id }} .slide');
  let counter{{ section.id }} = 0;

  slides{{ section.id }}.forEach((slide, index) => {
    slide.style.left = `${index * 100}%`;
  });

  window.goNext{{ section.id }} = () => {
    counter{{ section.id }}++;
    if(counter{{ section.id }} >= slides{{ section.id }}.length) {
      counter{{ section.id }} = 0;
    }
    slideImage{{ section.id }}();
  }

  window.goPrev{{ section.id }} = () => {
    counter{{ section.id }}--;
    if(counter{{ section.id }} < 0) {
      counter{{ section.id }} = slides{{ section.id }}.length - 1;
    }
    slideImage{{ section.id }}();
  }

  const slideImage{{ section.id }} = () => {
    slides{{ section.id }}.forEach((slide) => {
      slide.style.transform = `translateX(-${counter{{ section.id }} * 100}%)`;
    });
  }

  {% if section.settings.autoplay %}
    setInterval(() => {
      window.goNext{{ section.id }}();
    }, {{ section.settings.autoplay_speed }}000);
  {% endif %}
})();
</script>

