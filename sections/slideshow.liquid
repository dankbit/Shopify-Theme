<style>
  .customer-faves {
    background-color: var(--color-background);
    padding: var(--section-padding-top) var(--section-padding-right) var(--section-padding-bottom) var(--section-padding-left);
    width: 100%;
  }

  /* Main Container */
  .customer-faves__container {
    width: 100%;
    max-width: 100%;
  }

  /* Title Wrapper */
  .customer-faves__title-wrapper {
    margin-bottom: 2rem;
  }

  .customer-faves__title {
    font-size: {{ section.settings.title_font_size_mobile }}px;
    color: {{ section.settings.title_color }};
    margin: 0;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  @media (min-width: 768px) {
    .customer-faves__title {
      font-size: {{ section.settings.title_font_size_desktop }}px;
    }
  }

  /* Grid Wrapper - Positioning context for arrows */
  .customer-faves__grid-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  /* Products Container - This translates */
  .customer-faves__products-container {
    display: flex;
    transition: transform 0.3s ease-out;
    will-change: transform;
  }

  /* Product Card - Responsive width */
  .customer-faves__product-card {
    flex-shrink: 0;
    width: 100%;
    padding: 0 5px;
    box-sizing: border-box;
  }

  @media (min-width: 768px) {
    .customer-faves__product-card {
      width: 50%;
    }
  }

  @media (min-width: 1024px) {
    .customer-faves__product-card {
      width: 25%;
    }
  }

  /* Product Image */
  .customer-faves__product-image {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f5f5f5;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 0.75rem;
  }

  .customer-faves__product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .customer-faves__placeholder {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
  }

  /* Product Info */
  .customer-faves__product-info {
    display: flex;
    flex-direction: column;
  }

  .customer-faves__product-title {
    font-size: {{ section.settings.product_title_font_size_mobile }}px;
    color: {{ section.settings.product_title_color }};
    margin: 0 0 0.5rem 0;
    font-weight: 600;
    line-height: 1.4;
  }

  @media (min-width: 768px) {
    .customer-faves__product-title {
      font-size: {{ section.settings.product_title_font_size_desktop }}px;
    }
  }

  .customer-faves__price {
    font-size: {{ section.settings.price_font_size_mobile }}px;
    color: {{ section.settings.price_color }};
  }

  @media (min-width: 768px) {
    .customer-faves__price {
      font-size: {{ section.settings.price_font_size_desktop }}px;
    }
  }

  .customer-faves__price--original {
    text-decoration: line-through;
    margin-right: 0.5rem;
    opacity: 0.7;
  }

  .customer-faves__price--current {
    font-weight: 600;
  }

  /* Navigation Arrows */
  .customer-faves__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
    z-index: 10;
    width: 40px;
    height: 40px;
    flex-shrink: 0;
  }

  .customer-faves__arrow svg {
    width: 24px;
    height: 24px;
  }

  .prev-btn {
    left: 0;
  }

  .next-btn {
    right: 0;
  }

  .customer-faves__arrow:hover:not(:disabled) {
    opacity: 0.7;
  }

  .customer-faves__arrow:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .customer-faves__placeholder-message {
    padding: 2rem;
    text-align: center;
    color: var(--color-foreground);
  }
</style>

<script>
(function() {
  const section = document.querySelector('#shopify-section-{{ section.id }}');
  const productsContainer = section.querySelector('.customer-faves__products-container');
  const productCards = section.querySelectorAll('.customer-faves__product-card');
  const prevBtn = section.querySelector('.prev-btn');
  const nextBtn = section.querySelector('.next-btn');
  
  let counter = 0;
  let productsPerView = getProductsPerView();

  function getProductsPerView() {
    const width = window.innerWidth;
    if (width < 768) return {{ section.settings.products_per_view_mobile }};
    return {{ section.settings.products_per_view_desktop }};
  }

  function slideImage() {
    const percentage = counter * (100 / productsPerView);
    productsContainer.style.transform = `translateX(-${percentage}%)`;
  }

  function goNext() {
    counter++;
    if (counter > productCards.length - productsPerView) {
      counter = 0;
    }
    slideImage();
  }

  function goPrev() {
    counter--;
    if (counter < 0) {
      counter = productCards.length - productsPerView;
    }
    slideImage();
  }

  prevBtn.addEventListener('click', goPrev);
  nextBtn.addEventListener('click', goNext);

  // Handle window resize
  window.addEventListener('resize', () => {
    const newProductsPerView = getProductsPerView();
    if (newProductsPerView !== productsPerView) {
      productsPerView = newProductsPerView;
      counter = 0;
      slideImage();
    }
  });
})();
</script>