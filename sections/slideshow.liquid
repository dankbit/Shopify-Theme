<section id="custom-slider-{{ section.id }}">
  <div class="main">
    {% for block in section.blocks %}
      {% if block.settings.image != blank %}
        <img
          class="slide"
          src="{{ block.settings.image | image_url: width: 1000, height: 600 }}"
          alt="{{ block.settings.image.alt | escape }}"
          width="1000"
          height="600"
          loading="lazy"
        >
      {% endif %}
    {% endfor %}

    <div class="nav">
      <button onclick="goPrev_{{ section.id }}()">
        Prev
      </button>
      <button onclick="goNext_{{ section.id }}()">
        Next
      </button>
    </div>
  </div>

  <style>
    #custom-slider-{{ section.id }} * {
      padding: 0;
      margin: 0;
      box-sizing: border-box;
    }
    
    #custom-slider-{{ section.id }} .main {
      width: 70%;
      height: 600px;
      margin-top: 70px;
      margin: auto;
      position: relative;
      overflow: hidden;
    }
    
    #custom-slider-{{ section.id }} .slide {
      height: 100%;
      width: 100%;
      position: absolute;
      transition: 1s;
    }
  </style>

  <script>
    (function() {
      const root = document.getElementById('custom-slider-{{ section.id }}');
      if (!root) return;

      const slides = root.querySelectorAll('.slide');
      let counter = 0;

      slides.forEach(
        (slide, index) => {
          slide.style.left = `${index * 100}%`;
        }
      );

      const slideImage = () => {
        slides.forEach(
          (slide) => {
            slide.style.transform = `translateX(-${counter * 100}%)`;
          }
        );
      };

      window.goNext_{{ section.id }} = () => {
        counter++;
        if (counter >= slides.length) {
          counter = 0;
        }
        slideImage();
      };

      window.goPrev_{{ section.id }} = () => {
        counter--;
        if (counter < 0) {
          counter = slides.length - 1;
        }
        slideImage();
      };
    })();
  </script>

  {% schema %}
  {
    "name": "Simple JS Slider",
    "settings": [],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Slide image"
          }
        ]
      }
    ],
    "max_blocks": 4,
    "presets": [
      {
        "name": "Simple JS Slider"
      }
    ]
  }
  {% endschema %}
</section>
