{% comment %}
Simple Image Slider Section
{% endcomment %}

<div class="slider-wrapper">
  <div class="main">
    {% for block in section.blocks %}
      {% if block.settings.slide_image != blank %}
        <img 
          class="slide" 
          src="{{ block.settings.slide_image | img_url: '1200x' }}" 
          alt="{{ block.settings.slide_image.alt | escape }}"
          {{ block.shopify_attributes }}
        >
      {% else %}
        <img 
          class="slide" 
          src="https://via.placeholder.com/1000x600/cccccc/666666?text=Slide+{{ forloop.index }}" 
          alt="Slide {{ forloop.index }}"
          {{ block.shopify_attributes }}
        >
      {% endif %}
    {% endfor %}
    
    <div class="nav">
      <button class="prev-btn">{{section.settings.button_text}}</button>
      <button class="next-btn">{{section.settings.button_text}}</button>
    </div>
  </div>
</div>

<style>
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }

  .slider-wrapper {
    width: 100%;
    padding: 50px 0;
  }

  .main {
    width: 70%;
    height: 600px;
    margin: auto;
    position: relative;
    overflow: hidden;
  }

  .slide {
    height: 100%;
    width: 100%;
    position: absolute;
    transition: 1s;
    object-fit: cover;
  }

  .nav {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 20px;
    z-index: 10;
  }

  .nav button {
    padding: 10px 30px;
    background-color: #000;
    color: #fff;
    border: none;
    cursor: pointer;
    font-size: 16px;
    border-radius: 5px;
  }

  .nav button:hover {
    background-color: #333;
  }

  @media (max-width: 768px) {
    .main {
      width: 90%;
      height: 400px;
    }
  }
</style>

<script>
(function() {
  const section = document.querySelector('#shopify-section-{{ section.id }}');
  const slides = section.querySelectorAll('.slide');
  const prevBtn = section.querySelector('.prev-btn');
  const nextBtn = section.querySelector('.next-btn');
  let counter = 0;

  slides.forEach((slide, index) => {
    slide.style.left = `${index * 100}%`;
  });

  const goNext = () => {
    counter++;
    if(counter >= slides.length) {
      counter = 0;
    }
    slideImage();
  }

  const goPrev = () => {
    counter--;
    if(counter < 0) {
      counter = slides.length - 1;
    }
    slideImage();
  }

  const slideImage = () => {
    slides.forEach((slide) => {
      slide.style.transform = `translateX(-${counter * 100}%)`;
    });
  }

  nextBtn.addEventListener('click', goNext);
  prevBtn.addEventListener('click', goPrev);
})();
</script>

{% schema %}
{
  "name": "Image Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Slider",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}