{%- assign product_target = section.settings.featured_product | default: product -%}

<div class="wholesale-product-section" id="wholesale-{{ section.id }}">
  {% style %}
    .wholesale-product-section {
      background: #ffffff;
      border-radius: 12px;
      padding: {{ section.settings.padding_top_mobile }}px {{ section.settings.padding_right_mobile }}px {{ section.settings.padding_bottom_mobile }}px {{ section.settings.padding_left_mobile }}px;
    }

    @media (min-width: 768px) {
      .wholesale-product-section {
        padding: {{ section.settings.padding_top_desktop }}px {{ section.settings.padding_right_desktop }}px {{ section.settings.padding_bottom_desktop }}px {{ section.settings.padding_left_desktop }}px;
      }
    }

    .wholesale-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 40px;
      align-items: start;
    }

    @media (max-width: 768px) {
      .wholesale-container {
        grid-template-columns: 1fr;
        gap: 24px;
      }
    }

    /* Left Column - Image */
    .product-image-wrapper {
      width: 100%;
      aspect-ratio: 1;
      border-radius: 8px;
      overflow: hidden;
      background: #f5f5f5;
    }

    .product-image-wrapper img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    /* Right Column - Info */
    .product-info {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .product-title {
      font-size: 28px;
      font-weight: 700;
      color: #000;
      line-height: 1.3;
      margin: 0;
    }

    .product-price {
      font-size: 32px;
      font-weight: 700;
      color: #d90429;
    }

    /* Wholesale Banner */
    .wholesale-banner {
      background: linear-gradient(135deg, #f0f7ff 0%, #e6f2ff 100%);
      border-left: 4px solid #0066cc;
      padding: 16px;
      border-radius: 6px;
    }

    .wholesale-banner-title {
      font-size: 12px;
      text-transform: uppercase;
      font-weight: 700;
      color: #0066cc;
      margin-bottom: 8px;
      letter-spacing: 0.5px;
    }

    .wholesale-banner-text {
      font-size: 14px;
      color: #333;
      line-height: 1.5;
      margin: 0;
    }

    /* Quantity Controls */
    .wholesale-controls {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
    }

    @media (max-width: 640px) {
      .wholesale-controls {
        grid-template-columns: 1fr;
      }
    }

    .quantity-control-box {
      border: 1px solid #e5e5e5;
      border-radius: 8px;
      padding: 16px;
      background: #fafafa;
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .quantity-control-box:hover {
      border-color: #d0d0d0;
    }

    .quantity-control-box.active {
      border-color: #0066cc;
      background: #f0f7ff;
      box-shadow: 0 2px 8px rgba(0,102,204,0.15);
    }

    .control-label {
      font-size: 13px;
      font-weight: 700;
      text-transform: uppercase;
      color: #0066cc;
      margin-bottom: 8px;
      letter-spacing: 0.5px;
    }

    .control-description {
      font-size: 12px;
      color: #666;
      margin-bottom: 12px;
      line-height: 1.4;
    }

    /* Spinner */
    .qty-spinner {
      display: flex;
      border: 1px solid #ddd;
      border-radius: 6px;
      overflow: hidden;
      height: 48px;
      background: #fff;
    }

    .qty-spinner button {
      width: 48px;
      height: 100%;
      border: none;
      background: #fff;
      cursor: pointer;
      font-size: 20px;
      color: #333;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
      font-weight: 700;
    }

    .qty-spinner button:hover {
      background: #f0f0f0;
    }

    .qty-spinner button:active {
      background: #e0e0e0;
    }

    .qty-spinner input {
      flex: 1;
      border: none;
      text-align: center;
      font-size: 18px;
      font-weight: 700;
      color: #000;
      -moz-appearance: textfield;
      padding: 0;
    }

    .qty-spinner input::-webkit-outer-spin-button,
    .qty-spinner input::-webkit-inner-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }

    .control-info {
      font-size: 12px;
      color: #666;
      margin-top: 10px;
      padding-top: 10px;
      border-top: 1px solid #e5e5e5;
    }

    .control-info strong {
      color: #333;
      font-weight: 600;
    }

    .box-options {
      font-size: 11px;
      color: #888;
      margin-top: 6px;
    }

    /* Add to Cart Section */
    .add-to-cart-section {
      border-top: 1px solid #f0f0f0;
      padding-top: 20px;
    }

    .add-to-cart-info {
      background: #f9f9f9;
      padding: 12px;
      border-radius: 6px;
      margin-bottom: 16px;
      font-size: 14px;
      color: #333;
    }

    .add-to-cart-info strong {
      display: block;
      margin-bottom: 4px;
    }

    .btn-add-to-cart {
      width: 100%;
      padding: 16px;
      background: #0066cc;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      font-weight: 700;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.3s;
      letter-spacing: 0.5px;
    }

    .btn-add-to-cart:hover {
      background: #0052a3;
    }

    .btn-add-to-cart:active {
      transform: scale(0.98);
    }

    @media (max-width: 640px) {
      .product-title {
        font-size: 22px;
      }

      .product-price {
        font-size: 24px;
      }

      .wholesale-container {
        gap: 24px;
      }
    }
  {% endstyle %}

  {% if product_target != blank %}
    <div class="wholesale-container">
      
      <!-- LEFT: Image -->
      <div>
        {% if product_target.featured_image %}
          <div class="product-image-wrapper">
            <img src="{{ product_target.featured_image | image_url: width: 600 }}" alt="{{ product_target.title }}" loading="lazy">
          </div>
        {% endif %}
      </div>

      <!-- RIGHT: Info & Controls -->
      <div class="product-info">
        <form id="wholesale-form-{{ section.id }}" method="post" action="/cart/add">
          
          <h1 class="product-title">{{ product_target.title }}</h1>
          <div class="product-price">{{ product_target.selected_or_first_available_variant.price | money }}</div>

          <!-- Wholesale Banner -->
          <div class="wholesale-banner">
            <div class="wholesale-banner-title">üì¶ Wholesale Product</div>
            <p class="wholesale-banner-text">{{ section.settings.banner_text }}</p>
          </div>

          <!-- Quantity Controls -->
          <div class="wholesale-controls">
            
            <!-- Minimum Quantity -->
            {% if section.settings.enable_minimum %}
              <div class="quantity-control-box active" id="min-qty-box-{{ section.id }}">
                <div class="control-label">üìç Minimum Order</div>
                <div class="control-description">Order at least {{ section.settings.minimum_qty }} units</div>
                
                <div class="qty-spinner">
                  <button type="button" class="qty-minus" data-field="min">‚àí</button>
                  <input type="number" class="qty-input-min" value="{{ section.settings.minimum_qty }}" min="{{ section.settings.minimum_qty }}" readonly>
                  <button type="button" class="qty-plus" data-field="min">+</button>
                </div>

                <div class="control-info">
                  <strong id="min-display-{{ section.id }}">{{ section.settings.minimum_qty }}</strong> units
                </div>
              </div>
            {% endif %}

            <!-- Box Quantity -->
            {% if section.settings.enable_box %}
              <div class="quantity-control-box" id="box-qty-box-{{ section.id }}">
                <div class="control-label">üì¶ Box Order</div>
                <div class="control-description">Order in multiples of {{ section.settings.box_qty }}</div>
                
                <div class="qty-spinner">
                  <button type="button" class="qty-minus" data-field="box">‚àí</button>
                  <input type="number" class="qty-input-box" value="{{ section.settings.box_qty }}" min="{{ section.settings.box_qty }}" readonly>
                  <button type="button" class="qty-plus" data-field="box">+</button>
                </div>

                <div class="control-info">
                  <strong id="box-display-{{ section.id }}">{{ section.settings.box_qty }}</strong> units
                  <div class="box-options">‚úì {{ section.settings.box_qty }}, {{ section.settings.box_qty | times: 2 }}, {{ section.settings.box_qty | times: 3 }}...</div>
                </div>
              </div>
            {% endif %}

          </div>

          <!-- Add to Cart -->
          <div class="add-to-cart-section">
            <div class="add-to-cart-info">
              <strong id="final-qty-{{ section.id }}">Total: {{ section.settings.minimum_qty }} units</strong>
              <span id="final-price-{{ section.id }}">{{ product_target.selected_or_first_available_variant.price | money }}</span>
            </div>

            <input type="hidden" name="id" value="{{ product_target.selected_or_first_available_variant.id }}">
            <input type="hidden" name="quantity" id="qty-final-{{ section.id }}" value="{{ section.settings.minimum_qty }}">

            <button type="submit" class="btn-add-to-cart" id="btn-submit-{{ section.id }}">
              Add to Cart
            </button>
          </div>

        </form>
      </div>

    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const sectionId = "{{ section.id }}";
        const section = document.getElementById('wholesale-{{ section.id }}');
        
        const minInput = section.querySelector('.qty-input-min');
        const boxInput = section.querySelector('.qty-input-box');
        const qtyFinal = section.querySelector(`#qty-final-${sectionId}`);
        const submitBtn = section.querySelector(`#btn-submit-${sectionId}`);
        
        const minQty = {{ section.settings.minimum_qty }};
        const boxQty = {{ section.settings.box_qty }};
        const minStep = {{ section.settings.min_step }};
        const boxStep = {{ section.settings.box_step }};
        const price = {{ product_target.selected_or_first_available_variant.price }};
        
        let selectedMode = 'min';

        function updateDisplay() {
          const minVal = minInput ? parseInt(minInput.value) : minQty;
          const boxVal = boxInput ? parseInt(boxInput.value) : boxQty;
          const finalQty = selectedMode === 'min' ? minVal : boxVal;

          qtyFinal.value = finalQty;
          document.querySelector(`#final-qty-${sectionId}`).textContent = `Total: ${finalQty} units`;
          document.querySelector(`#final-price-${sectionId}`).textContent = '$' + ((price * finalQty) / 100).toFixed(2);
          
          if (minInput) document.querySelector(`#min-display-${sectionId}`).textContent = minVal;
          if (boxInput) document.querySelector(`#box-display-${sectionId}`).textContent = boxVal;
        }

        function updateBoxes() {
          const minBox = section.querySelector(`#min-qty-box-${sectionId}`);
          const boxBox = section.querySelector(`#box-qty-box-${sectionId}`);
          
          if (minBox) minBox.classList.toggle('active', selectedMode === 'min');
          if (boxBox) boxBox.classList.toggle('active', selectedMode === 'box');
        }

        // Minimum qty buttons
        if (minInput) {
          section.querySelectorAll('[data-field="min"]').forEach(btn => {
            btn.addEventListener('click', function(e) {
              e.preventDefault();
              selectedMode = 'min';
              updateBoxes();
              
              const isPlus = this.classList.contains('qty-plus');
              const current = parseInt(minInput.value);
              const newVal = isPlus ? current + minStep : Math.max(minQty, current - minStep);
              minInput.value = newVal;
              updateDisplay();
            });
          });
        }

        // Box qty buttons
        if (boxInput) {
          section.querySelectorAll('[data-field="box"]').forEach(btn => {
            btn.addEventListener('click', function(e) {
              e.preventDefault();
              selectedMode = 'box';
              updateBoxes();
              
              const isPlus = this.classList.contains('qty-plus');
              const current = parseInt(boxInput.value);
              const newVal = isPlus ? current + (boxStep * boxQty) : Math.max(boxQty, current - (boxStep * boxQty));
              boxInput.value = newVal;
              updateDisplay();
            });
          });
        }

        updateDisplay();
      });
    </script>

  {% else %}
    <div style="text-align: center; padding: 60px 20px; background: #f5f5f5; border-radius: 12px;">
      <p style="font-size: 16px; color: #666;">Please select a product in section settings</p>
    </div>
  {% endif %}

</div>

