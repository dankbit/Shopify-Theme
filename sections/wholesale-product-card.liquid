    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const sectionId = "{{ section.id }}";
        const section = document.getElementById('wholesale-{{ section.id }}');
        
        const selectionDiv = section.querySelector(`#selection-${sectionId}`);
        const quantitySection = section.querySelector(`#quantity-section-${sectionId}`);
        const addToCartSection = section.querySelector(`#add-to-cart-section-${sectionId}`);
        
        const qtyInput = section.querySelector(`#qty-input-${sectionId}`);
        const qtyPlus = section.querySelector(`#qty-plus-${sectionId}`);
        const qtyMinus = section.querySelector(`#qty-minus-${sectionId}`);
        const changeBtn = section.querySelector(`#change-btn-${sectionId}`);
        const qtyFinal = section.querySelector(`#qty-final-${sectionId}`);
        
        const minQty = {{ section.settings.minimum_qty }};
        const boxQty = {{ section.settings.box_qty }};
        const minStep = {{ section.settings.min_step }};
        const boxStep = {{ section.settings.box_step }};
        const price = {{ product_target.selected_or_first_available_variant.price }};
        
        let selectedMode = null;

        function formatPrice(cents) {
          return '$' + (cents / 100).toFixed(2);
        }

        function updateDisplay() {
          const qty = parseInt(qtyInput.value);
          
          document.querySelector(`#qty-display-${sectionId}`).textContent = qty + ' units';
          document.querySelector(`#total-price-${sectionId}`).textContent = formatPrice(price * qty);
          
          qtyFinal.value = qty;
        }

        function showQuantityStep() {
          selectionDiv.style.display = 'none';
          quantitySection.classList.add('show');
          addToCartSection.classList.add('show');
          updateDisplay();
        }

        function resetSelection() {
          selectedMode = null;
          selectionDiv.style.display = 'flex';
          quantitySection.classList.remove('show');
          addToCartSection.classList.remove('show');
          
          section.querySelectorAll('.option-box').forEach(box => {
            box.classList.remove('selected');
          });
        }

        // Option selection
        section.querySelectorAll('.option-box').forEach(box => {
          box.addEventListener('click', function() {
            const mode = this.dataset.mode;
            selectedMode = mode;
            
            section.querySelectorAll('.option-box').forEach(b => b.classList.remove('selected'));
            this.classList.add('selected');

            if (mode === 'min') {
              qtyInput.value = minQty;
              qtyInput.min = minQty;
              document.querySelector(`#selected-mode-${sectionId}`).textContent = `Minimum Order - ${minQty} units`;
            } else {
              qtyInput.value = boxQty;
              qtyInput.min = boxQty;
              document.querySelector(`#selected-mode-${sectionId}`).textContent = `Box Order - ${boxQty} units`;
            }

            setTimeout(showQuantityStep, 300);
          });
        });

        // Change selection
        changeBtn.addEventListener('click', function(e) {
          e.preventDefault();
          resetSelection();
        });

        // Quantity controls
        qtyPlus.addEventListener('click', function(e) {
          e.preventDefault();
          const current = parseInt(qtyInput.value);
          const step = selectedMode === 'min' ? minStep : (boxStep * boxQty);
          qtyInput.value = current + step;
          updateDisplay();
        });

        qtyMinus.addEventListener('click', function(e) {
          e.preventDefault();
          const current = parseInt(qtyInput.value);
          const min = selectedMode === 'min' ? minQty : boxQty;
          const step = selectedMode === 'min' ? minStep : (boxStep * boxQty);
          qtyInput.value = Math.max(min, current - step);
          updateDisplay();
        });

        qtyInput.addEventListener('input', updateDisplay);
      });
    </script>

